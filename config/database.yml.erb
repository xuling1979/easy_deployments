default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  url:  <%%= ENV.fetch("DATABASE_URL") { 'localhost' } %>

development:
  <<: *default
  database: <%= app_name_dasherized %>_development

test:
  <<: *default
  database: <%= app_name_dasherized %>_test

production:
  <<: *default
  database: <%= app_name_dasherized %>_production